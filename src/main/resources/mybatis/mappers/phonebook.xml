<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="himedia.phonebook.mappers.PhonebookMapper">		<!-- 1:1 매칭 -->
	<select id="selectAll" resultType="phonebookVo"> 
		SELECT * FROM phonebook ORDER BY id
	</select>
	
	<select id="selectOne" parameterType="int" resultType="phonebookVo">
		SELECT * FROM phonebook WHERE id=#{id}
	</select>
	
	<insert id="insert" parameterType="phonebookVo">
	INSERT INTO phonebook (name, hp, tel)
	VALUES(#{name}, #{hp}, #{tel})
	</insert>
	
	<update id="update" parameterType="phonebookVo">
	UPDATE phonebook SET
	name=#{name}, hp=#{hp}, tel=#{tel}
	WHERE id=#{id}
	</update>
	
	<delete id="delete" parameterType="int">
	DELETE FROM phonebook WHERE id=#{id}
	</delete>
	
	
	
</mapper>


